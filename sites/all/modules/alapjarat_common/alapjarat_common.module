	$prev_m = date('F', strtotime($prev_month));


	$c = 0;
	while ($end !== date($dateformat, strtotime('+1 month', strtotime($prev_month)))) {
		$archive = date('Ym', strtotime($prev_month));
		$prev_y = date('Y. ', strtotime($prev_month));
